<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="@dimen/pictureSize"
            android:layout_height="@dimen/buttonSize"
            android:gravity="center"
            android:id="@+id/backButton"
            android:text="@string/backButton"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:layout_margin="@dimen/singlePadding"
            android:fontFamily="sans-serif"/>

        <ImageView
            android:layout_width="@dimen/pictureSize"
            android:layout_height="@dimen/pictureSize"
            android:src="@drawable/aero_chord_info"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="@dimen/pictureSize"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/aeroChordInfo"
            android:layout_gravity="center"
            android:textSize="@dimen/textSizeArtist"
            android:layout_margin="@dimen/singlePadding"
            android:gravity="center"
            />

        <Button
            android:layout_width="@dimen/pictureSize"
            android:layout_height="@dimen/buttonSize"
            android:gravity="center"
            android:id="@+id/linkButton"
            android:text="@string/moreInformation"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:layout_margin="@dimen/singlePadding"
            android:fontFamily="sans-serif"/>



    </LinearLayout>

</ScrollView>
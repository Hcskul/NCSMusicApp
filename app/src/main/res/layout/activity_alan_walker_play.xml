<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="@dimen/pictureSize"
            android:layout_height="@dimen/buttonSize"
            android:layout_gravity="center"
            android:layout_margin="@dimen/singlePadding"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/backButton" />

        <ImageView
            android:layout_width="@dimen/pictureSize"
            android:layout_height="@dimen/pictureSize"
            android:layout_gravity="center"
            android:src="@drawable/alan_walker_play" />

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="@dimen/pictureSize"
            android:layout_height="@dimen/buttonSize"
            android:layout_gravity="center"
            android:layout_margin="@dimen/singlePadding"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/play_pause" />

        <Button
            android:id="@+id/moreInformation"
            android:layout_width="@dimen/pictureSize"
            android:layout_height="@dimen/buttonSize"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/moreInformations" />


    </LinearLayout>


</ScrollView>